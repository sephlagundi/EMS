<h1>Employee Details</h1>

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.DOB</h6>
        <p class="card-text">@Model.Email</p>
        <p class="card-text">@Model.Phone</p>
        <a asp-controller="Employee" asp-action="GetAllEmployees" class="card-link">Back to list</a>

    </div>
</div>